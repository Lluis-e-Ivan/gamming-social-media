{{>navbar}}

<div class="container">
    <div class="my-5 bottom-line">
    <div class="d-flex mb-5">
        <div>
            <img class="rounded-circle border border-2 object-fit-cover" src="{{currentUser.image}}" alt="Logo" width="200" height="200"/>
        </div>
        <div class="container mx-5 d-flex">
            <div>
                <h1>{{currentUser.username}}</h1>
                <p class="card-text">{{currentUser.description}}</p>
                <a class="btn btn-primary upper" style="width: 20%; padding: 10px 0 10px 0" href="/edit/{{currentUser.id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit profile</a>
            </div>
            
        </div>
    </div>
    </div>
    <div class="d-flex gap-3 my-5">
        <div class="col-6">
            <div class="d-flex justify-content-between my-3">
                <h5>Your games</h5>
                <a href="/games" class="btn btn-outline-light">See more</a>
            </div>
            {{#each user.yourGames as |yourGame|}}
            <div class="list-group my-3 max-elements">
                <a href="/games/{{yourGame.game._id}}" class="list-group-item list-group-item-dark" aria-current="true">
                <div class="d-flex w-100 justify-content-left gap-3">
                    <img style="max-width: 100px" src="{{yourGame.game.thumbnail}}"/>
                    <div class="text-truncate-container">
                        <h5 class="mb-1">{{yourGame.game.title}}</h5>
                        <p>{{yourGame.game.genre}}</p>
                    </div>
                </div>
                </a>
            </div>
            {{/each}}      
        </div>
        <div class="col-6 left-line">
            <div class="d-flex justify-content-between my-3 mx-3">
                <h5>Your channels</h5>
                <a href="/channels" class="btn btn-outline-light">See more</a>
            </div>
            {{#each user.yourChannels as |yourChannel|}}
            <div class="list-group my-3 mx-3 max-elements">
                <a href="/channels/{{yourChannel.channel.id}}" class="list-group-item list-group-item-dark" aria-current="true">
                <div class="d-flex w-100 justify-content-left gap-3">
                    <img style="max-width: 100px" src="{{yourChannel.channel.image}}"/>
                    <div class="text-truncate-container">
                        <h5 class="mb-1">{{yourChannel.channel.name}}</h5>
                        <p>{{yourChannel.channel.game.title}}</p>
                    </div>
                </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>














