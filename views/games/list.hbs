{{>navbar}}

<div class="container my-3">
    <h1> Games: </h1>
    <div class="row justify-content-around">
        {{#each games}}
        <div class="col-3">
            <div class="my-3">
                <div class="card text-bg-dark mb-3" style="width: 18rem;">
                    <img src="{{thumbnail}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{short_description}}</p>
                        <a href="/game/{{id}}" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>